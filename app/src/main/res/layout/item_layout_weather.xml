<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViemModel"
            type="com.practice.weatherappusingmvvmdatabinding.viewmodel.WeatherItemViewModel"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weather_card"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:transitionName="weatherCardTransition"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_view_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:hint="Chennai,IN"
                android:textSize="30sp"
                android:text="@{itemViemModel.cityName}"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height= "wrap_content"
                android:id="@+id/text_view_weather_description"
                android:hint="Partly Cloudy"
                android:text="@{itemViemModel.weatherDescription}"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/text_view_city_name"
                app:layout_constraintTop_toBottomOf="@id/text_view_city_name"
                android:layout_marginTop="8dp"
                />
            <ImageView
                android:id="@+id/image_view_weather_icon"
                android:layout_width="0dp"
                android:layout_height="120dp"
                fetchImage="@{itemViemModel.imageUrl}"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintStart_toStartOf="@id/text_view_weather_description"
                app:layout_constraintTop_toBottomOf="@id/text_view_weather_description"
                app:layout_constraintEnd_toStartOf="@id/text_view_current_temperature"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_launcher_foreground"
                />
            <TextView
                android:id="@+id/text_view_current_temperature"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintTop_toTopOf="@+id/image_view_weather_icon"
                app:layout_constraintBottom_toBottomOf="@id/image_view_weather_icon"
                app:layout_constraintStart_toEndOf="@id/image_view_weather_icon"
                app:layout_constraintEnd_toStartOf="@id/text_view_maximum_temperature"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:hint="41°"
                android:text="@{itemViemModel.averageTemperature}"
                android:gravity="center"
                android:textSize="80sp"
                />
            <TextView
                android:id="@+id/text_view_maximum_temperature"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:hint="45°"
                android:text="@{itemViemModel.maximumTemperature}"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintStart_toEndOf="@id/text_view_current_temperature"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_current_temperature"
                app:layout_constraintBottom_toTopOf="@id/text_view_minimum_temperature"
                android:gravity="center_horizontal|bottom"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/text_view_minimum_temperature"
                android:hint="37°"
                android:text="@{itemViemModel.minimumTemperature}"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_view_maximum_temperature"
                app:layout_constraintBottom_toBottomOf="@id/text_view_current_temperature"
                app:layout_constraintStart_toStartOf="@id/text_view_maximum_temperature"
                app:layout_constraintEnd_toEndOf="@id/text_view_maximum_temperature"
                android:gravity="center_horizontal|top"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>